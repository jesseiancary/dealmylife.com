<% if container == widget.container %>
	<% widget = logged_in_user.widgets.find_by_id(widget.widget_id) %>
	<% if widget.enabled %>
		<div id="<%= widget.id %>" class="portlet">
			<div class="portlet-header">
				<h3><%= widget.title %></h3>
			</div>
			<div class="portlet-content">
				<%= render :inline => widget.content.html_safe %>
			</div>
		</div>
	<% end %>
<% end %>
