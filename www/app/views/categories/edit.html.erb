<% content_for :header do %>
	<h3>Edit Category</h3>
<% end %>

<%= form_for(@category) do |f| %>
	<% if @category.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

			<ul>
			<% @category.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :master_category_id %><br />
		<%= f.collection_select :master_category_id, @master_categories, :id, :name, { :prompt => "*Master Category*" } %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

<div class="actions">
	<%= link_to "Cancel", categories_path, :class => "make-button" %>
	<%= link_to "Show", @category, :class => "make-button" %>
</div>