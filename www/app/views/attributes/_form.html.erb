<%= form_for(@attribute) do |f| %>
	
	<% if @attribute.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@attribute.errors.count, "error") %> prohibited this Attribute from being saved:</h2>

			<ul>
			<% @attribute.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :length %><br />
		<%= f.text_field :length %>
	</div>
	<div class="field">
		<%= f.label :type %><br />
		<%= f.collection_select :attribute_type_id, @attribute_types, :id, :name, { :prompt => "Select Type" } %>
	</div>
	<div class="field">
		<%= f.label :group %><br />
		<%= f.collection_select :attribute_group_id, @attribute_groups, :id, :name, { :prompt => "Select Group" } %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
	
<% end %>
